{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "functions/public/",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],     
    "rewrites": [
      {
        "source": "**",
        "function": "httpReq"
      }
    ]

  }
}