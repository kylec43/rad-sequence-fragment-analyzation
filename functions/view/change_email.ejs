<!DOCTYPE html>
<html>

    <head>

        <meta charset="utf-8">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

        <!--Font awesome CSS-->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">

        <!--My CSS-->
        <link rel="stylesheet" type="text/css" href="css/styles.css">

        <title>RAD-Seq</title>
    </head>

    <body>
        <%- include ('partials/nav.ejs', {page: 'change_email'}, user) %>

        <div class="card rad-card margin-center">
            <div class="rad-card-header">
                <h3 class="card-title rad-form-header">Change Password</h3>
            </div>
            <hr>
            <div class="card-body rad-card-body">
                <% if (errorMessage !== null) { %>
                    <p id="error" class="rad-error-message text-center"><%- errorMessage %></p>               
                    <br>
                <% } %>
                <% if (successMessage !== null) { %>
                    <p class="text-center rad-success-message"><%= successMessage %></p>
                    <br>
                <% } %>
                <form action="/change_email" method="post">
                    <div class="form-group">
                        <h6 class="rad-form-header">Current Email</h6>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                            </div>
                            <input type="email" class="form-control" name="currentEmail" id="currentEmail" value="<%= user.email %>" disabled>
                        </div>
                    </div>
                    <br>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                            </div>
                            <input class="form-control" name="newEmail" placeholder="New email" type="email">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                            </div>
                            <input class="form-control" name="confirmNewEmail" placeholder="Confirm new email" type="email">
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="rad-form-button margin-center">Change</button>
                    </div>
                </form>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    </body>


</html>