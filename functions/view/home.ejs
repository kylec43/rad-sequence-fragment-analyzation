<!DOCTYPE html>
<html>

    <head>
        
        <meta charset="utf-8">
        
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

        <!--My Css-->
        <link rel="stylesheet" type="text/css" href="css/form.css">
        <link rel="stylesheet" type="text/css" href="css/styles.css">

        <title>RAD-Seq</title>

        <style>
            .properties-button:focus{
                box-shadow: none;
            }
        </style>

    </head>

    <body>


        <script type="module" src="js/init_firebase.js"></script>

        <%- include ('partials/nav.ejs', {page: 'home'}, user) %>

        <form action="/results" class="rad-form" method="post">
            <div class="rad-form-inner">
                <h1 class="rad-form-header">RAD-Seq Fragment Analysis</h1>
                <br>
                <li id="error" class="rad-form-error-li" style="display: none;"></li>               

                <label class="rad-form-input-label" for="enzyme_select">Restriction Enzyme:</label>
                <select class="rad-form-input-inline" onchange="onSelectEnzyme(this);" name="enzyme_select" id="enzyme_select">
                    <% for(let i = 0; i < restriction_enzymes.length; i++) { %>
                        <option id="<%= restriction_enzymes[i]['id'] %>"><%= restriction_enzymes[i]["name"] %></option>
                    <% } %>
                </select>
                <label class="rad-form-input-label" for="enzyme_site">Restriction Site:</label>
                <input class="rad-form-input-inline" id="enzyme_site" name="enzyme_site" type="text" value="<%= restriction_enzymes.length > 0  ? restriction_enzymes[0]['restrictionSite'] : '' %>" disabled>

                <label class="rad-form-input-label" for="genome_file">Genome File:</label>
                <input class="rad-form-input-inline" type="file" id="genome_file">

                
                <label class="rad-form-input-label">Slice Probability</label>
                <input class="rad-form-input-inline" type="number" name="probability" id="probability" step="0.01" value="0.95" min="0.01" max="1.00" onchange="updateToFixed()">
                
                <% if(error){ %>
                    <li class="rad-form-error-li"><%=errorMessage%></li>
                <% } %>
                <button class="rad-form-button margin-center">Get Analysis</button>
            </div>
        </form>
        


        <script>
            var selectedGenome = document.getElementById('selectedGenome');
            var selectedEnzyme = document.getElementById('selectedEnzyme');
            var enzymeName = document.getElementById('enzymeName');
            var enzymeSite = document.getElementById('enzymeSite');
            var enzymeSelect = document.getElementById('enzymeSelect');
            var genomeName = document.getElementById('genomeName');
            var enzymePropertiesButtonsDiv = document.getElementById('enzymePropertiesButtonsDiv');
            var deleteGenomeProgressDiv = document.getElementById('deleteGenomeProgressDiv');
            var genomePropertiesButtonsDiv = document.getElementById('genomePropertiesButtonsDiv');
            var enzymeUpdateButton = document.getElementById('enzymeUpdateButton');
            var enzymeDeleteButton = document.getElementById('enzymeDeleteButton');
            var genomeUpdateButton = document.getElementById('genomeUpdateButton');
            var genomeDeleteButton = document.getElementById('genomeDeleteButton');
            var error = document.getElementById('error');
            var token = "<%= userToken %>"
            var DOC_NAME = "<%= user !== null ? user.uid : ''%>";
            var GENOME_FOLDER = "<%= user !== null ? 'genomes/' + user.uid + '/' : '' %>";

            var genomes = [];
            var restriction_enzymes = [];
            genomes = <%- JSON.stringify(genomes) %>;
            restriction_enzymes = <%- JSON.stringify(restriction_enzymes) %>;

            <% if (user) { %>
                window.onload = async ()=>{
                    await signIn(token);
                };
            <% } %>
        
            function updateToFixed(){
                let value = parseFloat(document.getElementById("probability").value);
                if(!isNaN(value) && value >= 0.01 && value <= 1.00){
                    document.getElementById("probability").value = value.toFixed(2);
                }
            }

            function onSelectEnzyme(sel){
                console.log(sel.selectedIndex);
                selectedEnzyme.value = restriction_enzymes[sel.selectedIndex].id;
                enzymeName.value = restriction_enzymes[sel.selectedIndex].name;
                enzymeSite.value = restriction_enzymes[sel.selectedIndex].restrictionSite;
                console.log(selectedEnzyme.value);
            }

            function onSelectGenome(sel){
                console.log(sel.selectedIndex);
                selectedGenome.value = genomes[sel.selectedIndex].fileName;
                genomeName.value = genomes[sel.selectedIndex].name;
                console.log(selectedGenome.value);
            }
        </script>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
        <script type="module" src="js/update_data.js"></script>  
        <script type="module" src="js/firebase_auth.js"></script>  
    </body>


</html>
