<!DOCTYPE html>
<html>

    <head>
        
        <meta charset="utf-8">
        
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

        <!--My Css-->
        <link rel="stylesheet" type="text/css" href="css/form.css">

        <title>RAD-Seq</title>

    </head>

    <body style="background-color: rgba(210,210,210,1);">

        <%- include ('partials/nav.ejs', {page: 'home'}, user) %>

        <div style="text-align: center;">
            <form action="/results" class="myForm" method="post">
                <div style="text-align:center">
                    <h1 style="margin-bottom: 40px; font-weight: bold;">RAD-Seq Fragment Analysis</h1>

                    <h4 style="font-weight: bold;">Genome</h4>
                    <div>
                        <select class="myDropDown" onchange="onSelectGenome(this);" name="genome" id="genome">
                            <% for(let i = 0; i < genomes.length; i++) { %>
                                <option value="<%= genomes[i]['fileName'] %>"><%= genomes[i]["name"] %></option>
                            <% } %>
                        </select>
                    </div>

                    <h4 style="font-weight: bold;">Restriction Enzyme</h4>
                    <div>
                        <select class="myDropDown" onchange="onSelectEnzyme(this);" name="enzyme" id="enzyme">
                        <% for(let i = 0; i < restriction_enzymes.length; i++) { %>
                            <option value="<%= restriction_enzymes[i]['id'] %>"><%= restriction_enzymes[i]["name"] %></option>
                        <% } %>
                        </select>
                    </div>

                    <h4 style="font-weight: bold; display: inline;">Slice Probability</h4><label>(0.01 - 1.00)</label>
                    <div>
                        <input type="number" name="probability" id="probability" step="0.01" class="myNumberInput" value="0.95" min="0.01" max="1.00" onchange="updateToFixed()">
                    </div>
                    <% if(error){ %>
                        <li style="text-align:center; font-weight: bold; color: red;"><%=errorMessage%></li>
                    <% } %>
                    <input name="submit" class="post-btn" type="submit" style="font-weight: bold;" value="Get Analysis" />
                </div>

                <input style="display: none;" name="selectedGenome" id="selectedGenome" value="<%= genomes.length > 0 ? genomes[0]['fileName'] : '' %>">
                <input style="display: none;" name="selectedEnzyme" id="selectedEnzyme" value="<%= restriction_enzymes.length > 0 ? restriction_enzymes[0]['id'] : '' %>">
            </form>
        </div>
        


        <script>
            var selectedGenome = document.getElementById('selectedGenome');
            var selectedEnzyme = document.getElementById('selectedEnzyme');

            function updateToFixed(){
                let value = parseFloat(document.getElementById("probability").value);
                if(!isNaN(value) && value >= 0.01 && value <= 1.00){
                    document.getElementById("probability").value = value.toFixed(2);
                }
            }

            function onSelectEnzyme(sel){
                selectedEnzyme.value = sel.options[sel.selectedIndex].value;
                console.log(selectedEnzyme.value);
            }

            function onSelectGenome(sel){
                selectedGenome.value = sel.options[sel.selectedIndex].value;
                console.log(selectedGenome.value);
            }
        </script>
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    </body>


</html>
