<!DOCTYPE html>
<html>

    <head>
        
        <meta charset="utf-8">
        
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

        <!--My Css-->
        <link rel="stylesheet" type="text/css" href="css/styles.css">

        <title>RAD-Seq</title>
    </head>

    <body>


        <script type="module" src="js/init_firebase.js"></script>

        <%- include ('partials/nav.ejs', {page: 'home'}, user) %>

            <form action="/results" class="rad-form" method="post">
                <div class="rad-form-inner">
                    <h1 class="rad-form-header">RAD-Seq Fragment Analysis</h1>
                    <br>
                    <li id="error" class="rad-form-error-li" style="display: none;"></li>               

                    <label class="rad-form-input-label" for="enzyme_select">Restriction Enzyme:</label>
                    <select class="rad-form-input-inline" onchange="onSelectEnzyme(this);" name="enzyme_select" id="enzyme_select">
                        <option>&lt&ltcustom&gt&gt</option>
                        <% for(let i = 0; i < restriction_enzymes.length; i++) { %>
                            <option id="<%= restriction_enzymes[i]['id'] %>"><%= restriction_enzymes[i]["name"] %></option>
                        <% } %>
                    </select>
                    <label class="rad-form-input-label" for="enzyme_site">Restriction Site:</label>
                    <input class="rad-form-input-inline" id="enzyme_site" name="enzyme_site" type="text">

                    <label class="rad-form-input-label" for="genome_file">Genome File:</label>
                    <input class="rad-form-input-inline" type="file" id="genome_file">

                    
                    <label class="rad-form-input-label">Slice Probability</label>
                    <input class="rad-form-input-inline" type="number" name="probability" id="probability" step="0.01" value="0.95" min="0.01" max="1.00" onchange="updateToFixed()">
                    
                    <% if(error){ %>
                        <li class="rad-form-error-li"><%=errorMessage%></li>
                    <% } %>
                    <button class="rad-form-button margin-center">Get Analysis</button>
                </div>
                <% if (!user) { %>
                    <div class="card rad-form-footer-card">
                        <div class="card-header">
                            <h5>Create an acccount to upload your own restriction enzymes!</h5>
                        </div>
                        <div class="card-body">
                            <h5>Sign up <span><a href="/register">here</a></span></h5>
                        </div>
                    </div>
                <% } %>
            </form>
        </div>
        


        <script>
            /* Inputs */
            var enzymeSelect = document.getElementById('enzyme_select');
            var enzymeSite = document.getElementById('enzyme_site');
            var probability = document.getElementById('probability');

            /* HTML elements*/
            var error = document.getElementById('error');

            /*Server data*/
            var token = "<%= userToken %>"
            var DOC_NAME = "<%= user !== null ? user.uid : ''%>";
            var restriction_enzymes = [];
            restriction_enzymes = <%- JSON.stringify(restriction_enzymes) %>;

            <% if (user) { %>
                window.onload = async ()=>{
                    await FirebaseController.signIn(token);
                };
            <% } %>
        
            function updateToFixed(){
                let value = parseFloat(probability.value);
                if(!isNaN(value) && value >= 0.01 && value <= 1.00){
                    document.getElementById("probability").value = value.toFixed(2);
                }
            }

            function onSelectEnzyme(sel){
                if(sel.selectedIndex === 0){
                    enzymeSite.disabled = false;
                    enzymeSite.value = "";

                } else {
                    enzymeSite.disabled = true;
                    enzymeSite.value = restriction_enzymes[sel.selectedIndex-1].restrictionSite;

                }
            }

        </script>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
        <script type="module" src="js/firebase_controller.js"></script>  
    </body>


</html>
