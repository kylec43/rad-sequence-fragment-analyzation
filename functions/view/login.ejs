<!DOCTYPE html>
<html>

    <head>

        <meta charset="utf-8">
        <title>RAD-Seq</title>
        <%- include('partials/css.ejs') %>
    </head>

    <body>

        <%- include ('partials/nav.ejs', {page: 'login', user}) %>

        <div class="card rad-card margin-center">
            <div class="rad-card-header">
                <h3 class="card-title rad-form-header">Log In</h3>
            </div>
            <hr>
            <div class="card-body rad-card-body">
                <% if (errorMessage !== null) { %>
                    <p id="error" class="rad-error-message text-center"><%- errorMessage %></p>               
                    <br>
                <% } %>
                <% if (successMessage !== null) { %>
                    <p class="text-center rad-success-message"><%= successMessage %></p>
                    <br>
                <% } %>
                <form action="/login" method="post">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                            </div>
                            <input class="form-control" name="email" placeholder="Email" type="email">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                            </div>
                            <input class="form-control" name="password" placeholder="Password" type="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="rad-form-button margin-center">Login</button>
                        <hr>
                        <a class="inner-center" href="/forgot_password">Forgot password?</a>
                        <p class="inner-center">New user? Sign up <span><a href="/register">here</a></span></p>
                    </div>
                </form>
            </div>
        </div>
        
        <%- include('partials/scripts.ejs') %>
    </body>


</html>
