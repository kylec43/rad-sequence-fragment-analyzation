<script>
    function closeAnalysisInfoPopup(){
        document.querySelector("#analysisInfoPopup").style.display = "none";
        document.querySelector("#infoShadow").style.display = "none";
    }

    function showAnalysisInfoPopup(){
        document.querySelector("#analysisInfoPopup").style.display = "block";
        document.querySelector("#infoShadow").style.display = "block";
    }

    function closeGraphInfoPopup(){
        document.querySelector("#graphInfoPopup").style.display = "none";
        document.querySelector("#infoShadow").style.display = "none";
    }

    function showGraphInfoPopup(){
        document.querySelector("#graphInfoPopup").style.display = "block";
        document.querySelector("#infoShadow").style.display = "block";
    }
</script>