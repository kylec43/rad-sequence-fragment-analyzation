<!DOCTYPE html>
<html>

    <head>

        <meta charset="utf-8">
        <title>RAD-Seq</title>
        <%- include('partials/css.ejs') %>
    </head>

    <body>
        <%- include ('partials/nav.ejs', {page: 'forgot_password', user}) %>


        <div class="card rad-card margin-center margin-top-lg">
            <div class="rad-card-header">
                <h3 class="card-title rad-card-text-header">Forgot Password</h3>
            </div>
            <hr>
            <div class="card-body rad-card-body">
                <form action="/forgot_password" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                            </div>
                            <input class="form-control" name="email" placeholder="Email" type="email" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="rad-button margin-center">Send Reset Link</button>
                    </div>
                    <hr>
                    <a class="inner-center" href="/login">Return to login</a>
                </form>
            </div>
        </div>

        <%- include('partials/scripts.ejs') %>
        <script src="scripts/forgot_password.js"></script>
    </body>


</html>