<!DOCTYPE html>
<html>

    <head>

        <meta charset="utf-8">
        <title>RAD-Seq</title>
        <%- include('partials/css.ejs') %>
    </head>

    <body>
        <%- include ('partials/nav.ejs', {page: 'register', user}) %>

        <div class="card rad-card margin-center margin-top-lg">
            <div class="rad-card-header">
                <h3 class="card-title rad-card-text-header">Registration</h3>
            </div>
            <hr>
            <div class="card-body rad-card-body">
                <form action="/register" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                            </div>
                            <input class="form-control" name="email" placeholder="Email" type="email" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                            </div>
                            <input class="form-control" name="confirmEmail" placeholder="Confirm email" type="email" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                            </div>
                            <input class="form-control" name="password" placeholder="Password" type="password" minlength="6" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                            </div>
                            <input class="form-control" name="confirmPassword" placeholder="Confirm password" type="password" minlength="6" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="rad-button margin-center">Register</button>
                        <hr>
                        <p class="inner-center">Already registered? sign in <span><a href="/login">here</a></span></p>
                    </div>
                </form>
            </div>
        </div>


        <input type="hidden" id="errorMessage" value="<%= errorMessage === null ? '' : errorMessage %>">

        <%- include('partials/scripts.ejs') %>
        <script src="scripts/register.js"></script>
    </body>


</html>